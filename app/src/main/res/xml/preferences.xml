<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="pref_switch_to_numbers"
        android:title="Enable Number Keyboard"
        android:defaultValue="false" />

    <SwitchPreference
        android:key="pref_enable_latin"
        android:title="Enable Latin/English Keyboard"
        android:defaultValue="false" />

    <SwitchPreference
        android:key="pref_enable_phonetic"
        android:title="Enable Phonetic Typing"
        android:defaultValue="false" />

    <SwitchPreference
        android:key="pref_enable_sound"
        android:title="Key Sound Feedback"
        android:defaultValue="true" />

    <SwitchPreference
        android:key="pref_enable_vibration"
        android:title="Key Vibration Feedback"
        android:defaultValue="true" />

</PreferenceScreen>
